#!/usr/bin/perl
use strict;
use warnings;

use SVG;

my $w = 200;
my $svg = SVG->new( width => $w, height => $w );

my $g = $svg->group(
    id    => 'group',
    style => {
        stroke           => 'gray',
        fill             => 'none',
        'stroke-width'   => '0.5',
        'stroke-opacity' => '0.5',
    },
);

my $offset = $w / 2;
$g->rectangle(
    x      => 0,
    y      => 0,
    width  => $offset,
    height => $offset,
    id     => 'quadrant_0x0',
);
$g->rectangle(
    x      => $offset,
    y      => $offset,
    width  => $offset,
    height => $offset,
    id     => 'quadrant_1x1',
);

my $i = 10;
for my $j ( 0 .. 10 ) {
    $g->circle(
        cx => $offset,
        cy => $offset,
        r  => $i * $n,
        id => 'circle_' . $i . '_' . $j,
    );
}

print $svg->xmlify;
